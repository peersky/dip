{
  "name": "dip-monorepo",
  "private": true,
  "description": "Root package for the DIP monorepo",
  "scripts": {
    "dev": "pnpm --parallel --stream -r dev",
    "build": "pnpm --stream -r build",
    "db:generate": "pnpm --filter @peeramid-labs/dip-database db:generate",
    "db:migrate": "pnpm --filter @peeramid-labs/dip-database db:migrate",
    "postinstall": "pnpm -r build"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.0.0"
}
